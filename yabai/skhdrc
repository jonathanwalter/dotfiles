## Quickly restart the yabai launch agent
rctrl + ralt + rcmd + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


## rotate tree 90
rctrl + ralt + rcmd - r : yabai -m space --rotate 90

## toggle window fullscreen zoom
rctrl + ralt + rcmd - space : yabai -m window --toggle zoom-fullscreen
rctrl + ralt + rcmd - f : yabai -m window --toggle float

# increase window size
rctrl + ralt + rcmd - a : yabai -m window --resize left:-20:0
rctrl + ralt + rcmd - s : yabai -m window --resize bottom:0:20
rctrl + ralt + rcmd - w : yabai -m window --resize top:0:-20
rctrl + ralt + rcmd - d : yabai -m window --resize right:20:0

# decrease window size
rctrl + ralt + rcmd + shift - d : yabai -m window --resize left:20:0
rctrl + ralt + rcmd + shift - s : yabai -m window --resize bottom:0:-20
rctrl + ralt + rcmd + shift - w : yabai -m window --resize top:0:20
rctrl + ralt + rcmd + shift - a : yabai -m window --resize right:-20:0

# shift focus of windows
rctrl + ralt + rcmd + lcmd - left : yabai -m window --focus prev
rctrl + ralt + rcmd + lcmd - right : yabai -m window --focus next
rctrl + ralt + rcmd + lcmd - up : yabai -m window --focus north
rctrl + ralt + rcmd + lcmd - down : yabai -m window --focus south

# swap with previous or next window in window tree
rctrl + ralt + rcmd + shift - left : yabai -m window --swap prev
rctrl + ralt + rcmd + shift - right : yabai -m window --swap next
rctrl + ralt + rcmd + shift - up : yabai -m window --swap north
rctrl + ralt + rcmd + shift - down : yabai -m window --swap south

# set insertion point in focused container
rctrl + ralt + rcmd + lctrl - h : yabai -m window --insert west
rctrl + ralt + rcmd + lctrl - j : yabai -m window --insert south
rctrl + ralt + rcmd + lctrl - k : yabai -m window --insert north
rctrl + ralt + rcmd + lctrl - l : yabai -m window --insert east


# switch spaces
rctrl + ralt + rcmd - 1 : yabai -m space --focus 1
rctrl + ralt + rcmd - 2 : yabai -m space --focus 2
rctrl + ralt + rcmd - 3 : yabai -m space --focus 3
rctrl + ralt + rcmd - 4 : yabai -m space --focus 4
rctrl + ralt + rcmd - 5 : yabai -m space --focus 5
rctrl + ralt + rcmd - 6 : yabai -m space --focus 6
rctrl + ralt + rcmd - 7 : yabai -m space --focus 7
rctrl + ralt + rcmd - 8 : yabai -m space --focus 8
rctrl + ralt + rcmd - tab : yabai -m space --focus recent


# send to space
rctrl + ralt + rcmd + shift - 1 : yabai -m window --space  1 #; yabai -m space --focus 1
rctrl + ralt + rcmd + shift - 2 : yabai -m window --space  2 #; yabai -m space --focus 2
rctrl + ralt + rcmd + shift - 3 : yabai -m window --space  3 #; yabai -m space --focus 3
rctrl + ralt + rcmd + shift - 4 : yabai -m window --space  4 #; yabai -m space --focus 4
rctrl + ralt + rcmd + shift - 5 : yabai -m window --space  5 #; yabai -m space --focus 5
rctrl + ralt + rcmd + shift - 6 : yabai -m window --space  6 #; yabai -m space --focus 6
rctrl + ralt + rcmd + shift - 7 : yabai -m window --space  7 #; yabai -m space --focus 7
rctrl + ralt + rcmd + shift - 8 : yabai -m window --space  8 #; yabai -m space --focus 8


# launch apps
rctrl + ralt + rcmd - return : /Applications/Firefox.app/Contents/MacOS/Firefox

# rctrl + ralt + rcmd - return : /Users/jonathan/dotfiles/yabai/NewFirefoxWindow.applescript  
rctrl + ralt + rcmd + shift - return : /Users/jonathan/dotfiles/yabai/NewiTermWindow.applescript 